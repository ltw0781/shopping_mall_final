<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" -->
<mapper namespace="com.shop.shopping.board.mapper.BoardMapper">

    <select id="list" resultType="Board">
        SELECT *
        FROM board
    </select>

    <select id="read" resultType="Board">
        SELECT *
        FROM board
        WHERE board_id = #{boardId}
    </select>

    <!-- 게시글 수정 -->
    <update id="update">
        UPDATE board
            SET title = #{title}
                <!-- ,user_id = #{userId} -->
                ,content = #{content}
                ,updated_at = now()
        WHERE board_id = #{boardId}
    </update>

</mapper>