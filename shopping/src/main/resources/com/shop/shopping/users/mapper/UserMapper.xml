<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shop.shopping.users.mapper.UserMapper">

    <!-- 회원가입 -->
    <insert id="insert" parameterType="User">
        INSERT INTO user (user_id, password, name, email,
        phone) VALUES (#{userId}, #{password}, #{name}, #{email}, #{phone})
    </insert>

    <!-- 로그인 (아이디로 사용자 조회) -->
    <select id="findByUserId" parameterType="String" resultType="User">
        SELECT * FROM user WHERE
        user_id = #{userId}
    </select>

</mapper>